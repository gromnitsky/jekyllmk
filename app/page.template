<!-- -*-html-*- -->

<article class="jekyllmk-post" *ngIf="data">
  <header>
    <h2>{{ data?.subject }}</h2>
  </header>

  <section>
    <p [innerHTML]="data?.body"></p>
  </section>

  <footer>
    <p>
      <a href="{{ data?.url_src }}" target="_blank">Source</a>
    </p>
  </footer>
</article>
