<!-- -*-html-*- -->

<nav class="my-article-nav">
  <a [class.hidden]="!post_prev"
     href="{{ post_prev?.url }}" title="{{ post_prev?.subject }}">&lArr;</a>
  <a [class.hidden]="!post_next"
     href="{{ post_next?.url }}" title="{{ post_next?.subject }}">&rArr;</a>
</nav>

<article class="my-article" *ngIf="data">
  <header>
    <h2>{{ data?.subject }}</h2>
    <p>
      <span *ngFor="#name of data?.authors; #last = last">
	<a [routerLink]="['Tags', {list: name }]">{{ name }}</a><span *ngIf="!last">,</span>
      </span>
      <br>
      <time>
	{{ params.year }}-{{ params.month }}-{{ params.day }}
	{{ data?.time }}
      </time>
    </p>
  </header>

  <section>
    <p [innerHTML]="data?.body"></p>
  </section>

  <footer>
    <p>
      Tags:
      <span *ngFor="#name of data?.tags; #last = last">
	<a [routerLink]="['Tags', {list: name }]">{{ name }}</a><span *ngIf="!last">,</span>
      </span>
      <br>
      <a href="{{ data?.url_src }}" target="_blank">Source</a>
    </p>
  </footer>

</article>
